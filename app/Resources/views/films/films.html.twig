{% extends 'default/layout.html.twig' %}



{% block content %}
    <main class="main-content">
        <div class="container">
            <div class="page">
                <div class="breadcrumbs">
                    <a href="index.html">Home</a>
                    <span>Movie Review</span>
                </div>

                <div class="filters">
                    {% for category in categories %}

                    <button> {{ category.name }} </button>


                    {% endfor %}

                </div>


                <div class="movie-list">
                    {% for film in films %}
                    <div class="movie">
                        <a href="{{ path('film', {'id':film.id}) }}">

                            <figure class="movie-poster"><img src="{{ path('imagesViews',  {'id': film.id }) }}" alt="#"></figure>
                            <div class="movie-title">{{ film.getName() }}</div>
                        </a>
                    </div>
                    {% endfor %}
                </div> <!-- .movie-list -->

            </div>
        </div> <!-- .container -->
    </main>
{% endblock %}
